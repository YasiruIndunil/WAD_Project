<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Promotion Food Menu</h5>
            <h1 class="mb-5">Promotions</h1>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <div class="tab-content">
                <div class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        @foreach (var item in ViewBag.PromoList)
                        {
                            <div class="col-lg-3 border border-2">
                                <img class="flex-shrink-0 img-fluid rounded mt-2" src="~/img/Menu/@item.ImageUrl" alt="" style=" height:120px;">
                                <div class="d-flex align-items-center">

                                    <div class="w-100 d-flex flex-column text-start ps-4" onclick="Order(@item.PromotionID)">
                                        <h5 class="d-flex justify-content-between border-bottom pb-2">
                                            <span>@item.Title</span>
                                        </h5>
                                        <span>@item.StartDate.ToString("yyyy-MM-dd") to @item.EndDate.ToString("yyyy-MM-dd")</span>
                                        <small class="fst-italic">@item.Description</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
