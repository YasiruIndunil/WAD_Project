<script type="text/javascript">

    document.addEventListener("DOMContentLoaded", function () {
        // Simulate a click on the element
        const elementToClick = document.getElementById("1"); // Replace '1' with the actual ID of your element
        if (elementToClick) {
            elementToClick.click(); // Simulate the click
            elementToClick.classList.add("active"); // Add the 'active' class to the element
        }
    });



    // Remove "active" class from all other `.nav-item` elements
    document.querySelectorAll(".nav-item a").forEach((element) => {
        element.classList.remove("active");
    });

    // Add "active" class to the clicked element
/*    clickedElement.classList.add("active");*/

    function MenuList(id) {

        $.get('@Url.Action("Menu_Partial", "Menu")', { MealItemID: id }, function (response) {
            $("#_MenuList").html(response);


        });

    }

    function Order(MId) {

        $.ajax({
            async: true,
            type: 'POST',
            url: '@Url.Action("AddToCart", "Ordering")',
            data: { MenuID: MId },
            success: function (data) {

                if (data && data.length > 0) {
                    var itemQty = data.reduce((total, item) => total + item.Quantity, 0); // Calculate total quantity in the cart
                    updateCartBadge(itemQty); // Update the cart badge with the total quantity
                } else {
                    console.error('No items in the cart.');
                }
            },
            error: function (xhr, status, error) {
                console.error('Error adding to cart:', error);
            }


        });

    }


    // Example of dynamically updating the cart badge count
    function updateCartBadge(count) {
        const cartBadge = document.getElementById('cart-badge');
        if (count > 0) {
            cartBadge.textContent = count; // Update the number
            cartBadge.style.display = 'inline'; // Ensure it's visible
        } else {
            cartBadge.style.display = 'none'; // Hide if count is 0
        }
    }



</script>